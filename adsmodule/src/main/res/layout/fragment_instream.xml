<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <RelativeLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_off_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/adMargin"
        android:layout_marginRight="@dimen/adMargin"
        android:layout_marginBottom="@dimen/adMargin"
        android:background="@drawable/background_channel_longnight"
        android:focusable="true"
        android:padding="4dp"
        android:text="@string/ads_off"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/learn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/adMargin"
        android:layout_marginLeft="@dimen/adMargin"
        android:layout_marginBottom="@dimen/adMargin"
        android:background="@drawable/background_channel_longnight"
        android:focusable="true"
        android:padding="4dp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1"
        android:text="@string/more_text"
        android:textColor="@color/colorWhite"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/adMargin"
        android:layout_marginEnd="@dimen/adMargin"
        android:focusable="false"
        android:layout_marginRight="@dimen/adMargin"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/adMargin"
        android:layout_marginRight="@dimen/adMargin"
        android:layout_marginBottom="@dimen/adMargin"
        android:background="@drawable/background_channel_longnight"
        android:focusable="true"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:visibility="invisible" />
</RelativeLayout>